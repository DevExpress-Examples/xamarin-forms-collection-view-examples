<?xml version="1.0" encoding="UTF-8"?>
<SwipeItemView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.SwipeItemViewEx">

    <Grid x:Name="swipeItemContainer" Margin="20,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>
        <Image Source="{Binding ImageSource}" HorizontalOptions="End"/>
        <Label Text="{Binding LabelText}" VerticalOptions="Center" HorizontalOptions="Start"
               Grid.Column="1" TextColor="White" FontSize="Medium"/>
    </Grid>

</SwipeItemView>
